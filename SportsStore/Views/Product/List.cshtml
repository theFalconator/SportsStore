@model SportsStore.Models.ViewModels.ProductListViewModel

@foreach (var p in Model.Products)
{
    @Html.Partial("ProductSummary", p)
}

@if (Model.PagingInfo.TotalItems > Model.PagingInfo.ItemsPerPage)
{
    <div page-model="@Model.PagingInfo" page-action="List" page-classes-enabled="true" page-class="btn" page-class-normal="btn-secondary" page-class-selected="btn-primary" page-url-category="@Model.CurrentCategory" class="btn-group pull-right m-1"></div>
}
