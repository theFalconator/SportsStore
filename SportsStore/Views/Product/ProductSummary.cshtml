@model Product

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right"><small>@Model.Price.ToString("C")</small></span>
        </h4>
    </div>
    <div class="card-text">@Model.Description</div>
</div>